{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "noImplicitReturns": true,
    "target": "es2015",
    "module": "commonjs",
    "lib": ["dom", "es2017" ],
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
